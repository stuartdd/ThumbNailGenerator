<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
    <Appenders>
        <RollingFile 
            name="StdOutFile" 
            fileName="${sys:logPath}/StdOutLog.log" 
            bufferedIO="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>  
            <FilePattern>${sys:logPath}/StdOutLog.%d{dd-MMM}.log.gz</FilePattern>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>                  
            </Policies>
            <DefaultRolloverStrategy max="5" />        
        </RollingFile>
        <File name="StdErrorFile" fileName="${sys:logPath}/StdErrLog.log" bufferedIO="false" advertiseURI="file:/${sys:logPath}/StdErrLog.log" advertise="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>            
        </File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
        </Console>
        <Console name="Error" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="Main :" level="trace" additivity="false">
            <AppenderRef ref="StdOutFile"/>
        </Logger>
        <Logger name="Error:" level="trace" additivity="false">
            <AppenderRef ref="StdErrorFile"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Error"/>
        </Root>
    </Loggers>
</Configuration>